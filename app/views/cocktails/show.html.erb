<div class="container">
  <h1><%= @cocktail.name %></h1>

  <ul class="list-group">
    <% @cocktail.doses.each do |elt| %>
      <li class="list-group-item">
        <%= link_to dose_path(elt.id), method: "delete" do %>
          <i class="fa fa-trash"></i>
        <% end %>
        <%= elt.description %>
        <%= elt.ingredient.name %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Back", cocktails_path %>
</div>

